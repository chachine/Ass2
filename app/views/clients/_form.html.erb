
<%= simple_form_for(@client) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :nom %>
    <%= f.input :prenom %>
    <%= f.input :address %>
    <%= f.input :ville %>
    <%= f.input :pays %>
    <%= f.input :date_naissance %>
    <%= f.input :lieu_naissance %>
    <%= f.input :sexe %>
    <%= f.input :cin %>
    <%= f.input :date_val_cin %>
    <%= f.input :num_permis %>
    <%= f.input :cat_permis %>
    <%= f.input :lieu_permis %>
    <%= f.input :date_permis %>
    <%= f.input :date_val_permis %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
