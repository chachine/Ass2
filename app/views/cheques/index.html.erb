<p id="notice"><%= notice %></p>

<h1>Cheques</h1>

<table>
  <thead>
    <tr>
      <th>Banque</th>
      <th>Numero</th>
      <th>Nom</th>
      <th>Montant</th>
      <th>Etat</th>
      <th>Date reception</th>
      <th>Date encaissement</th>
      <th colspan="3"></th>
    </tr>
  </thead>

  <tbody>
    <% @cheques.each do |cheque| %>
      <tr>
        <td><%= cheque.banque %></td>
        <td><%= cheque.numero %></td>
        <td><%= cheque.nom %></td>
        <td><%= cheque.montant %></td>
        <td><%= cheque.etat %></td>
        <td><%= cheque.date_reception %></td>
        <td><%= cheque.date_encaissement %></td>
        <td><%= link_to 'Show', cheque %></td>
        <td><%= link_to 'Edit', edit_cheque_path(cheque) %></td>
        <td><%= link_to 'Destroy', cheque, method: :delete, data: { confirm: 'Are you sure?' } %></td>
      </tr>
    <% end %>
  </tbody>
</table>

<br>

