
<%= simple_form_for(@cheque) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :banque %>
    <%= f.input :numero %>
    <%= f.input :nom %>
    <%= f.input :montant %>
    <%= f.input :etat %>
    <%= f.input :date_reception %>
    <%= f.input :date_encaissement %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
