
<%= simple_form_for(@vehicule) do |f| %>
  <%= f.error_notification %>
  <%= f.error_notification message: f.object.errors[:base].to_sentence if f.object.errors[:base].present? %>

  <div class="form-inputs">
    <%= f.input :matricule %>
    <%= f.input :matricule_ant %>
    <%= f.input :date_mc %>
    <%= f.input :date_mc_maroc %>
    <%= f.input :date_mutation %>
    <%= f.input :usage %>
    <%= f.input :proprietaire %>
    <%= f.input :address %>
    <%= f.input :date_val_cgrise %>
    <%= f.input :marque %>
    <%= f.input :type_cgrise %>
    <%= f.input :genre %>
    <%= f.input :modele %>
    <%= f.input :carburant %>
    <%= f.input :chassis %>
    <%= f.input :cylindre %>
    <%= f.input :cv %>
    <%= f.input :place %>
    <%= f.input :ptac %>
    <%= f.input :poids %>
    <%= f.input :ptmct %>
  </div>

  <div class="form-actions">
    <%= f.button :submit %>
  </div>
<% end %>
